<!-- Home.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width,initial-scale=1.0">
  <title>PAWSH</title>
  <link rel="stylesheet" type="text/css" href="stylesheets/style.css">
  <style>
    main.profile-page {
    display: flex;
    justify-content: center;
    padding: 40px 20px;
    }

    .profile-box {
    background: #fff;
    padding: 30px;
    border: 1px solid #ddd;
    border-radius: 6px;
    max-width: 500px;
    width: 100%;
    text-align: center;
    }

    .profile-header {
    margin-bottom: 20px;
    }

    .profile-pic {
    border-radius: 50%;
    width: 100px;
    height: 100px;
    }

    .profile-header h2 {
    margin: 10px 0 5px;
    }

    .profile-header p {
    margin: 0;
    color: #666;
    }

    .profile-details {
    text-align: left;
    margin-top: 20px;
    }

    .profile-details h3 {
    margin-top: 0;
    }

    .profile-details p {
    margin: 5px 0;
    }

    .profile-details button {
    margin-top: 10px;
    padding: 8px 12px;
    background: #27ae60;
    color: #fff;
    border: none;
    cursor: pointer;
    }

    .profile-actions {
    display: flex;
    justify-content: center;
    gap: 15px;
    margin-top: 20px;
    }

    .button {
    padding: 10px 15px;
    background: #27ae60;
    color: #fff;
    text-decoration: none;
    border-radius: 4px;
    }

    .button.secondary {
    background: #2c3e50;
    }
  </style>
</head>
<body>
    <header>
        <div class="container header-container">
        <a href="/"><div class="logo">PAWSH</div></a>
        <nav class="main-nav">
            <a href="/">Home</a>
            <a href="/ourstory">Our Story</a>
            <a href="/shop">Shop</a>
            <a href="/contact">Contact Us</a>
        </nav>
        <div class="profile-icon">
             <a href="/profile"><img src="img/user.png" alt="Profile"></a>
        </div>
        </div>
    </header>

    <main class="profile-page">
        <div class="profile-box">
        <div class="profile-header">
            <img src="https://via.placeholder.com/100" alt="Profile Picture" class="profile-pic" />
            <h2><%= user.firstname %> <%= user.lastname %></h2>
            <p><%= user.email %></p>
            <p><%= user.role %></p>
        </div>

        <div class="profile-actions">
            <a href="/history" class="button">View Orders</a>
            <a href="/shop" class="button secondary">Keep Shopping</a>
        </div>
        </div>
    </main>
    <!-- Subscribe / Footer -->
    <section class="subscribe-blankpage">
        <p>Join the pack for pawsh Perks</p>
        <form class="subscribe-form">
          <input type="email" placeholder="Email Address">
          <button type="submit">Subscribe</button>
        </form>
        <div class="social-icons">
          <a href="#"><img src="img/facebook.png" alt="Facebook"></a>
          <a href="#"><img src="img/instagram.png" alt="Instagram"></a>
        </div>
      </section>
</body>
</html>