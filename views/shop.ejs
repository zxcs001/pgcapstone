<!-- Home.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width,initial-scale=1.0">
  <title>pawsh â€“ Shop</title>
  <link rel="stylesheet" type="text/css" href="stylesheets/style.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr" crossorigin="anonymous">
</head>
<body>
    <header>
        <div class="container header-container">
        <a href="/"><div class="logo">pawsh</div></a>
        <nav class="main-nav">
            <a href="/">Home</a>
            <a href="/ourstory">Our Story</a>
            <a href="/shop">Shop</a>
            <a href="/contact">Contact Us</a>
        </nav>
        <div class="profile-icon">
            <a href="/login"><img src="img/user.png" alt="Profile"></a>
        </div>
        </div>
    </header>

    <main>
        <section class="intro">
        <h2>Pawsitively Spoil Them</h2>
        <div class="buttons">
            <a href="/cart"><button>My Shopping Cart</button></a>
            <a href="/history"><button>Track My Treats</button></a>
        </div>
        </section>

        <section class="categories">
        <div class="category">
            <div class="image-placeholder"></div>
            <h3>Toys</h3>
        </div>
        <div class="category">
            <div class="image-placeholder"></div>
            <h3>Apparel</h3>
        </div>
        <div class="category">
            <div class="image-placeholder"></div>
            <h3>Treats</h3>
        </div>
        </section>

        <section class="best-sellers">
        <h2>Best Sellers</h2>
        <div class="products">
        <% for (let i = 0; i < data.products.length; i++) { %>
            <div class="product">
                <div class="image-placeholder"></div>
                <h4><%= data.products[i].title %></h4>
                <h6><%= data.products[i].description %></h6>
                <p>$<%= data.products[i].price %></p>
                <button onclick="addToCart('<%= data.products[i].id %>')">Add to Wag Bag</button>
            </div>
        <% } %>
        </div>
        </section>
    </main>
    <div class="toast">
        <div class="toast-body">
            <p>Successfully added to cart</p>
            <button type="button" class="btn-close" data-bs-dismiss="toast"></button>
        </div>
    </div>

    <!-- Subscribe / Footer -->
    <section class="subscribe">
        <p>Join the pack for pawsh Perks</p>
        <form class="subscribe-form">
          <input type="email" placeholder="Email Address">
          <button type="submit">Subscribe</button>
        </form>
        <div class="social-icons">
          <a href="#"><img src="img/facebook.png" alt="Facebook"></a>
          <a href="#"><img src="img/instagram.png" alt="Instagram"></a>
        </div>
    </section>

    <script>
        function toast() {
            var toastElList = [].slice.call(document.querySelectorAll('.toast'))
            var toastList = toastElList.map(function(toastEl) {
                return new bootstrap.Toast(toastEl)
            })
            toastList.forEach(toast => toast.show()) 
        }

        function addToCart(id) {
            console.log(id)
            axios.post("/cart", {
                productid: id,
                quantity: 1
            })
            .then((response) => {
                toast()})
            .then((error) => console.log(error));
        }
    </script>

    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js" integrity="sha384-ndDqU0Gzau9qJ1lfW4pNLlhNTkCfHzAVBReH9diLvGRem5+R9g2FzA8ZGN954O5Q" crossorigin="anonymous"></script>
</body>
</html>