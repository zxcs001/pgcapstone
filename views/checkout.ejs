<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width,initial-scale=1.0">
  <title>PAWSH â€“ Checkout</title>
  <link rel="stylesheet" type="text/css" href="stylesheets/style.css">
</head>
<body>
    <header>
        <div class="container header-container">
        <a href="/"><div class="logo">PAWSH</div></a>
        <nav class="main-nav">
            <a href="/">Home</a>
            <a href="#">Our Story</a>
            <a href="/shop">Shop</a>
            <a href="/contact">Contact Us</a>
        </nav>
        <div class="profile-icon">
            <a href="/login"><img src="img/user.png" alt="Profile"></a>
        </div>
        </div>
    </header>

    <main class="container">
        <h1>Checkout</h1>
        <div style="display:flex; gap:40px; flex-wrap:wrap;">
          <!-- SHIPPING ADDRESS -->
          <form style="max-width:400px; margin:20px auto;" method="post" >
            <div style="flex:1; min-width:280px;">
              <h2>Shipping Address</h2>
              <div class="form-group">
                <input id="name" name="name" type="text" placeholder="Full Name" required>
              </div>
              <div class="form-group">
                <input id="street" name="street" type="text" placeholder="Street Address" required>
              </div>
              <div class="form-group">
                <input id="city" name="city" type="text" placeholder="City" required>
              </div>
              <div class="form-group">
                <input id="state" name="state" type="text" placeholder="State" required>
              </div>
              <div class="form-group">
                <input id="country" name="country" type="text" placeholder="Country" required>
              </div>
              <div class="form-group">
                <input id="postalcode" name="postalcode" type="text" placeholder="Postal Code" required>
              </div>
      
              <h2>Payment Information</h2>
              <div class="form-group">
                <input type="text" placeholder="Credit Card Number">
              </div>
              <div style="display:flex; gap:10px;">
                <div class="form-group" style="flex:2;">
                  <input type="text" placeholder="Exp. MM/YY">
                </div>
                <div class="form-group" style="flex:1;">
                  <input type="text" placeholder="CVC">
                </div>
              </div>
              <div class="form-group">
                <label>
                  <input type="checkbox"> Billing address same as shipping
                </label>
              </div>
              <button class="button" href="#">Place Order</button>
            </div>
          </form>
          
          <!-- ORDER REVIEW -->
          <div style="flex:1; min-width:280px;">
            <h2>Order Review</h2>
            <div class="card">
            <% let grandTotal = 0; %>
              <% data.forEach(function(item) { %>
                <% 
                const quantity = item.quantity || 1;
                const price = parseFloat(item.product.price);
                const total = price * quantity;
                grandTotal += total;
                %>
                <img class="checkout-img" src="img/OIP.webp" alt="Product Image" style="border-radius:4px;">
                <h3><%= item.title || 'Untitled Product' %></h3>
                <p>Description: <%= item.product.description || '' %></p>
                <p>Price: $<%= item.product.price || '' %></p>
                <p>Quantity: <%= item.quantity %></p>
              <% }); %>
                <p><strong>Total: <%= grandTotal.toFixed(2) %></strong></p>
            </div>
          </div>
        </div>
      </main>
    <!-- Subscribe / Footer -->
    <section class="subscribe">
        <p>Join the pack for pawsh Perks</p>
        <form class="subscribe-form">
          <input type="email" placeholder="Email Address">
          <button type="submit">Subscribe</button>
        </form>
        <div class="social-icons">
          <a href="#"><img src="img/facebook.png" alt="Facebook"></a>
          <a href="#"><img src="img/instagram.png" alt="Instagram"></a>
        </div>
      </section>
</body>
</html>