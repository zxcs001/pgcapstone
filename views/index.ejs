<!-- Home.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width,initial-scale=1.0">
  <title>PAWSH</title>
  <link rel="stylesheet" type="text/css" href="stylesheets/style.css">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</head>
<body>
    <header>
        <div class="container header-container">
        <a href="/"><div class="logo">PAWSH</div></a>
        <nav class="main-nav">
            <a href="/">Home</a>
            <a href="/ourstory">Our Story</a>
            <a href="/shop">Shop</a>
            <a href="/contact">Contact Us</a>
        </nav>
        <div class="profile-icon">
             <a href="/profile"><img src="img/user.png" alt="Profile"></a>
        </div>
        </div>
    </header>

    <main class="container">
    <!-- Products for index page -->
        <section class="our-story">
          <h2>Our Story</h2>
          <h3>Pawst &amp; Present</h3>

          <div id="myCarousel" class="carousel slide" data-ride="carousel">
          <!-- Indicators -->
          <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
          </ol>

          <!-- Wrapper for slides -->
          <div class="carousel-inner">
            <div class="item active">
              <a href="/shop"><img src="img/sale1.png" alt="carousel1"></a>
            </div>

            <div class="item">
              <a href="/shop"><img src="img/sale2.png" alt="carousel2"></a>
            </div>

            <div class="item">
              <a href="/shop"><img src="img/sale3.png" alt="carousel3"></a>
            </div>
          </div>

          <!-- Left and right controls -->
          <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
          </a>
        </section>

    <!-- Our Team -->
        <section class="our-team">
        <h2>Our Team</h2>
        <div class="team-members">
            <div class="team-member">
            <div class="member-photo"><img src="img/cat.jpg" alt="Facebook"></div>
            <div class="member-name">Annika<br>CEO</div>
            </div>
            <div class="team-member">
            <div class="member-photo"><img src="img/shiba.avif" alt="Facebook"></div>
            <div class="member-name">Alex<br>CEO</div>
            </div>
            <div class="team-member">
            <div class="member-photo"><img src="img/pitbull.jpg" alt="Facebook"></div>
            <div class="member-name">Hogan<br>CEO</div>
            </div>
            <div class="team-member">
            <div class="member-photo"><img src="img/chihuahua.jpg" alt="Facebook"></div>
            <div class="member-name">Uziel<br>CEO</div>
            </div>
        </div>
        </section>
    </main>
    <!-- Subscribe / Footer -->
    <section class="subscribe">
        <p>Join the pack for pawsh Perks</p>
        <form class="subscribe-form">
          <input type="email" placeholder="Email Address">
          <button type="submit">Subscribe</button>
        </form>
        <div class="social-icons">
          <a href="#"><img src="img/facebook.png" alt="Facebook"></a>
          <a href="#"><img src="img/instagram.png" alt="Instagram"></a>
        </div>
      </section>
</body>
</html>