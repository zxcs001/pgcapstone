<!-- Home.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width,initial-scale=1.0">
  <title>pawsh â€“ Our Story</title>
  <link rel="stylesheet" type="text/css" href="stylesheets/style.css">
    <style>
    main {
      width: 90%;
      margin: 20px auto;
    }
    .order {
      background: #fff;
      border: 1px solid #ddd;
      padding: 15px;
      margin-bottom: 15px;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
    .order-info {
      flex: 1;
    }
    .order-actions {
      text-align: right;
    }
    .order-actions button {
      padding: 8px 12px;
      border: none;
      background: #27ae60;
      color: #fff;
      cursor: pointer;
    }
  </style>
</head>
<body>
    <header>
        <div class="container header-container">
        <a href="/"><div class="logo">pawsh</div></a>
        <nav class="main-nav">
            <a href="/">Home</a>
            <a href="#">Our Story</a>
            <a href="/shop">Shop</a>
            <a href="/contact">Contact Us</a>
        </nav>
        <div class="profile-icon">
            <a href="/login"><img src="img/user.png" alt="Profile"></a>
        </div>
        </div>
    </header>

    <main>
      <h2>Order History</h2>
      <% if (data.length === 0) { %>
        <p>You have no orders yet.</p>
      <% } else { %>
        <% data.forEach(function(order) { %>
          <div class="order">
            <div class="order-info">
              <p><strong>Order #: <%= order.id %></strong></p>
              <p>Placed: 
                <% if (order.user.created_at) { %>
                  <%= new Date(order.user.created_at).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) %>
                <% } else { %>
                  Unknown Date
                <% } %>
              </p>
              <p>Status: <%= order.status || 'Pending' %></p>
            </div>
            <div class="order-actions">
              <p><strong>Total: $<%= parseFloat(order.total).toFixed(2) %></strong></p>
              <a href="/history/<%= order.id %>"><button>View Order</button></a>
            </div>
          </div>
        <% }); %>
      <% } %>
    </main>
    <!-- Subscribe / Footer -->
    <section class="subscribe">
        <p>Join the pack for pawsh Perks</p>
        <form class="subscribe-form">
          <input type="email" placeholder="Email Address">
          <button type="submit">Subscribe</button>
        </form>
        <div class="social-icons">
          <a href="#"><img src="img/facebook.png" alt="Facebook"></a>
          <a href="#"><img src="img/instagram.png" alt="Instagram"></a>
        </div>
      </section>
</body>
</html>