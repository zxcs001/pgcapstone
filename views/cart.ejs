<!-- Home.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width,initial-scale=1.0">
  <title>Pawsh – Our Story</title>
  <link rel="stylesheet" type="text/css" href="stylesheets/style.css">
</head>
<body>
    <header>
        <div class="container header-container">
        <a href="/"><div class="logo">PAWSH</div></a>
        <nav class="main-nav">
            <a href="/">Home</a>
            <a href="#">Our Story</a>
            <a href="/shop">Shop</a>
            <a href="/contact">Contact Us</a>
        </nav>
        <div class="profile-icon">
            <a href="/login"><img src="img/user.png" alt="Profile"></a>
        </div>
        </div>
    </header>

    <main class="cart">
        <h2>Shopping Cart</h2>
        <table>
        <thead>
            <tr>
            <th>Item</th>
            <th>Price</th>
            <th>Qty</th>
            <th>Total</th>
            </tr>
        </thead>
        <tbody>
            <tr>
            <td>
                <div class="item-info">
                <div class="item-image"></div>
                <div>
                    <strong>Seasonal IPA – 6-pack</strong><br>
                    Crisp & Hoppy
                </div>
                </div>
            </td>
            <td>$12.00</td>
            <td>
                <div class="quantity">
                <button>-</button>
                <input type="text" value="1">
                <button>+</button>
                </div>
            </td>
            <td>$12.00</td>
            </tr>
            <tr>
            <td>
                <div class="item-info">
                <div class="item-image"></div>
                <div>
                    <strong>Logo T-Shirt (M)</strong><br>
                    Soft Cotton
                </div>
                </div>
            </td>
            <td>$20.00</td>
            <td>
                <div class="quantity">
                <button>-</button>
                <input type="text" value="1">
                <button>+</button>
                </div>
            </td>
            <td>$20.00</td>
            </tr>
        </tbody>
        </table>
        <div class="subtotal">
        Subtotal: $32.00
        </div>
        <div class="cart-actions">
        <button>Continue Shopping</button>
        <button>Order History</button>
        <button class="checkout">Checkout</button>
        </div>
    </main>

    <!-- Subscribe / Footer -->
    <section class="subscribe">
        <p>Join the pack for Pawsh Perks</p>
        <form class="subscribe-form">
          <input type="email" placeholder="Email Address">
          <button type="submit">Subscribe</button>
        </form>
        <div class="social-icons">
          <a href="#"><img src="img/facebook.png" alt="Facebook"></a>
          <a href="#"><img src="img/instagram.png" alt="Instagram"></a>
        </div>
      </section>
</body>
</html>