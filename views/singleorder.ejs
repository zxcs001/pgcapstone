<!-- Home.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width,initial-scale=1.0">
  <title>pawsh â€“ Our Story</title>
  <link rel="stylesheet" type="text/css" href="../stylesheets/style.css">
    <style>
    body {
      font-family: Arial, sans-serif;
      margin: 20px;
      background: #f9f9f9;
    }
    table {
      width: 100%;
      border-collapse: collapse;
      background: #fff;
    }
    th, td {
      padding: 10px;
      border-bottom: 1px solid #ddd;
      text-align: left;
    }
    .actions {
      margin-top: 20px;
      display: flex;
      justify-content: flex-end;
      gap: 10px;
    }
    button {
      padding: 8px 12px;
      background: #27ae60;
      color: #fff;
      border: none;
      cursor: pointer;
    }
  </style>
</head>
<body>
    <header>
        <div class="container header-container">
        <a href="/"><div class="logo">pawsh</div></a>
        <nav class="main-nav">
            <a href="/">Home</a>
            <a href="#">Our Story</a>
            <a href="/shop">Shop</a>
            <a href="/contact">Contact Us</a>
        </nav>
        <div class="profile-icon">
            <a href="/login"><img src="img/user.png" alt="Profile"></a>
        </div>
        </div>
    </header>

    <main class="cart">
        <h2>Shopping Cart</h2>
        <table>
            <thead>
            <tr>
                <th>Item</th>
                <th>Price</th>
                <th>Qty</th>
                <th>Total</th>
            </tr>
            </thead>
            <tbody>
            <% let grandTotal = 0; %>
            <% data.order.items.forEach(function(item) { %>
                <% 
                const quantity = item.quantity || 1;
                const price = parseFloat(item.unitprice);
                const total = price * quantity;
                grandTotal += total;
                %>
                <tr>
                <td><%= item.title || 'Untitled Product' %></td>
                <td>$<%= price.toFixed(2) %></td>
                <td><%= item.quantity %></td>
                <td>$<%= total.toFixed(2) %></td>
                </tr>
            <% }); %>
            </tbody>
        </table>
        <div class="subtotal">
        Subtotal: $32.00
        </div>
        <div class="cart-actions">
        <a href="/shop"><button>Continue Shopping</button></a>
        <a href="/history"><button>Order History</button></a>
         <% if(data.order.payment?.length > 0){ %>
            <a href="/shop"><button class="checkout">Go back</button></a>
        <% } else{ %>
            <button class="checkout">Checkout</button>
        <% } %>
        
        </div>
    </main>

    <!-- Subscribe / Footer -->
    <section class="subscribe">
        <p>Join the pack for pawsh Perks</p>
        <form class="subscribe-form">
          <input type="email" placeholder="Email Address">
          <button type="submit">Subscribe</button>
        </form>
        <div class="social-icons">
          <a href="#"><img src="img/facebook.png" alt="Facebook"></a>
          <a href="#"><img src="img/instagram.png" alt="Instagram"></a>
        </div>
      </section>
</body>
</html>